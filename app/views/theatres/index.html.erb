<% if current_user.has_role? :admin %>
<h1>All Theatres</h1>
<ul>
  <div class="row row-cols-1 row-cols-md-3">
  <% @theatres.each do |theatre| %>
    <div class="col-md-3">
    <div class="card text-white bg-secondary bg-gradient mb-3" style="max-width: 18rem;">
    <div class="card-body">
    <h5 class="card-title">
      <%= theatre.name.capitalize%>
    </h5>
    <p class="card-text">
      <%= theatre.contact_number %>
      <br>
      <%= theatre.venue %>
      <%= theatre.theatre_administrator_id %>
    </p>
      <%= link_to "Edit", edit_theatre_path(theatre), class: "btn btn-danger bg-gradient" %>
      <%= link_to "Destroy", theatre_path(theatre), data: { method: :delete }, class: "btn btn-danger bg-gradient" %>
    </div>
    </div>
    </div>
  <% end %>
  </div>
</ul>
<%= link_to "Create Theatre", new_theatre_path, class: "btn btn-danger"%>

<% elsif current_user.has_role? :theatre_admin %>
<h1> All your Theatres </h1>
    <% @theatres.each do |theatre| %>
      <% if current_user.id == theatre.theatre_administrator_id%>
        <div class="col-md-3">
        <div class="card text-white bg-secondary bg-gradient mb-3" style="max-width: 18rem;">
        <div class="card-body">
        <h5 class="card-title">
        <%= theatre.name %>
        </h5>
        <%= link_to "Show Theatre", theatre_path(theatre), class: "btn btn-danger" %>
        </div>
        </div>
        </div>
      <% end %>
  <% end %>
</ul>
<%end%>

